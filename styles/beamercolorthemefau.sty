\ProvidesPackage{styles/beamercolorthemefau}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage{ifthen}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\DeclareOptionBeamer{BaseColor}{%
  \PassOptionsToPackage{#1}{styles/faucolors}%
}
\newcount\fau@color@variant
\DeclareOptionBeamer{variant}{%
  \ifthenelse{\equal{#1}{outline}}{\fau@color@variant=0}{}
  \ifthenelse{\equal{#1}{fond1}}{\fau@color@variant=1}{}
  \ifthenelse{\equal{#1}{fond2}}{\fau@color@variant=2}{}
}
\ExecuteOptionsBeamer{variant=outline}
\ProcessOptionsBeamer
