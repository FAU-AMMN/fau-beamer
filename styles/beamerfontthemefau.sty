\ProvidesPackage{styles/beamerfontthemefau}

% ..............................................................................
% Font sizes.
% ------------------------------------------------------------------------------
\def\fau@font@size{18}
\def\fau@font@baselineskip{20}
\DeclareOptionBeamer{Size}{\def\fau@font@size{#1}}
\DeclareOptionBeamer{BaseLineSkip}{\def\fau@font@baselineskip{#1}}

% ..............................................................................
\ProcessOptionsBeamer
\mode<presentation>
% ..............................................................................

% Helvetica
\RequirePackage{lmodern}
\RequirePackage{textcomp}
\RequirePackage{fix-cm}
\RequirePackage[scaled=.92]{helvet}

\setbeamerfont{title}{size=\huge,series=\bfseries}
\setbeamerfont{subtitle}{size=\Large,series=\mdseries}
\setbeamerfont{frametitle}{size=\LARGE,series=\bfseries}
\setbeamerfont{framesubtitle}{size=\Large,series=\mdseries}
\setbeamerfont{block title}{size=\large,series=\bfseries}
\setbeamerfont{footline}{size=\scriptsize}
\setbeamerfont{subsection in toc}{size=\Large,series=\mdseries}

\AtBeginDocument{\fontsize{\fau@font@size}{\fau@font@baselineskip}\selectfont}

% ..............................................................................
% equal font sizes for all levels
\setbeamerfont{itemize/enumerate body}{size=\fontsize{\fau@font@size}{\fau@font@baselineskip}}
\setbeamerfont{itemize/enumerate subbody}{size=\fontsize{\fau@font@size}{\fau@font@baselineskip}}
\setbeamerfont{itemize/enumerate subsubbody}{size=\fontsize{\fau@font@size}{\fau@font@baselineskip}}
% ..............................................................................

\mode<all>